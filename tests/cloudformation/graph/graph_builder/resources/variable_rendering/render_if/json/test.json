{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "EnvType": {
            "Description": "Environment type.",
            "Default": "dev",
            "Type": "String"
        },
        "InstanceSize": {
            "Description": "EC2 Instance small Size",
            "Type": "String",
            "Default": "m1.large"
        }
    },
    "Conditions": {
        "CreateProdResources": {
            "Fn::Equals": [
                {
                    "Ref": "EnvType"
                },
                "prod"
            ]
        },
        "CreateDevResources": {
            "Fn::Equals": [
                {
                    "Ref": "EnvType"
                },
                "dev"
            ]
        }
    },
    "Resources": {
        "EC2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "Tags": [
                  {
                    "Key": "yor_trace",
                    "Value": "86997738-a5ce-4621-9d4e-c7acb561b825"
                  }
                ],
                "InstanceType": {
                    "Fn::If": [
                        "CreateProdResources",
                        "c1.xlarge",
                        {
                            "Fn::If": [
                                "CreateDevResources",
                                {
                                    "Ref": "InstanceSize"
                                },
                                "m1.small"
                            ]
                        }
                    ]
                }
            }
        },
        "S3BucketSuspended": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                  {
                    "Key": "yor_trace",
                    "Value": "7530f75a-1655-40a3-98f4-07211bda4667"
                  }
                ],
                "VersioningConfiguration": {
                    "Status": {
                        "Fn::If": [
                            "CreateProdResources",
                            "Enabled",
                            "Suspended"
                        ]
                    }
                }
            }
        },
        "S3BucketEnabled": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "Tags": [
                  {
                    "Key": "yor_trace",
                    "Value": "7262c3ec-7b20-42a4-b8b3-e456b2f375df"
                  }
                ],
                "VersioningConfiguration": {
                    "Status": {
                        "Fn::If": [
                            "CreateDevResources",
                            "Enabled",
                            "Suspended"
                        ]
                    }
                }
            }
        }
    }
}