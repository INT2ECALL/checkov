{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "CompanyName": {
            "Description": "Company Name",
            "Type": "String",
            "Default": "acme"
        },
        "Environment": {
            "Description": "Environment",
            "Type": "String"
        }
    },
    "Resources": {
        "WebVPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "Tags": [
                  {
                    "Key": "yor_trace",
                    "Value": "f5fba17c-c1c1-418b-8f19-fc87e6583c0b"
                  }
                ],
                "CidrBlock": "172.16.0.0/16",
                "EnableDnsSupport": true,
                "EnableDnsHostnames": true
            }
        },
        "DefaultDB": {
            "Type": "AWS::RDS::DBInstance",
            "Properties": {
                "Tags": [
                  {
                    "Key": "yor_trace",
                    "Value": "5d171932-646a-4772-bac3-fa1c7f4f5028"
                  }
                ],
                "DBName": {
                    "Fn::Sub": "rds-${AWS::AccountId}-${CompanyName}-${Environment}"
                },
                "DBInstanceClass": "db.m4.large"
            }
        }
    },
    "Outputs": {
        "DBEndpoint": {
            "Description": "DB Endpoint",
            "Value": {
                "Fn::Sub": "${DefaultDB.Endpoint.Address}:${DefaultDB.Endpoint.Port}"
            }
        },
        "WebVPCCidrBlock": {
            "Description": "WebVPC Cidr Block",
            "Value": {
                "Fn::Sub": "${WebVPC.CidrBlock}"
            }
        },
        "CidrBlockAssociations": {
            "Description": "WebVPC Cidr Block Associations",
            "Value": {
                "Fn::Sub": "${WebVPC.CidrBlockAssociations}"
            }
        },
        "DefaultDBName": {
            "Description": "DefaultDB Name",
            "Value": {
                "Fn::Sub": "rds-${AWS::AccountId}-${CompanyName}-${Environment}"
            }
        }
    }
}